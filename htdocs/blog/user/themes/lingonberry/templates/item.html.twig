{% embed 'partials/base.html.twig' %}

    {% block content %}
    <div class="content" style="max-width: 800px; margin: 0 auto; padding: 2rem 1.5rem;">
        <article class="post">
            <header class="post-header">
                <h1 class="post-title">{{ page.title }}</h1>
                <div class="post-meta">
                    <span>{{ page.date|date('F j, Y') }}</span>
                    {% if page.taxonomy.category %}
                        {% for category in page.taxonomy.category %}
                            <span class="category-tag">{{ category }}</span>
                        {% endfor %}
                    {% endif %}
                    <span>{{ (page.content|length / 200)|round }} min read</span>
                </div>
            </header>
            
            <div class="post-content">
                {{ page.content|raw }}
            </div>
            
            {% if page.taxonomy.tag %}
            <div class="tags">
                {% for tag in page.taxonomy.tag %}
                    <a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}" class="tag">{{ tag }}</a>
                {% endfor %}
            </div>
            {% endif %}
        </article>
        
        <!-- Navigation to other posts -->
        <div class="post-navigation" style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                {% if not page.isFirst %}
                <a href="{{ page.nextSibling.url }}" class="btn btn-secondary" style="display: inline-flex; align-items: center;">
                    <i data-feather="arrow-left" style="margin-right: 0.5rem;"></i>
                    Previous Post
                </a>
                {% endif %}
                
                {% if not page.isLast %}
                <a href="{{ page.prevSibling.url }}" class="btn btn-secondary" style="display: inline-flex; align-items: center;">
                    Next Post
                    <i data-feather="arrow-right" style="margin-left: 0.5rem;"></i>
                </a>
                {% endif %}
            </div>
        </div>
    </div>
    {% endblock %}

{% endembed %}